{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "types": ["node"],
  },
  "exclude": ["node_modules", "dist", "tests"],
  "include": ["src/**/*"]
}
